<%= form_with(model: room, local: true) do |form| %>

  <div class="field">
    <%= form.label :room_name %>
    <%= form.text_field :room_name, id: :room_room_name %>
  </div>

  <div class="field">
    <%= form.label :room_colour %>
    <%= form.color_field :room_colour, id: :room_room_colour, class: 'colorpicker' %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

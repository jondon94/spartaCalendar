<p id="notice"><%= notice %></p>

<h1 class="roomPage">Rooms</h1>
<table>
  <thead>
    <tr id="room_index">
      <th>Room Name</th>
      <th> Colour</th>
      <th colspan="3"> Options</th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.room_name %></td>
        <td style="background-color: <%= room.room_colour %>"></td>
        <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Room', new_room_path %>
